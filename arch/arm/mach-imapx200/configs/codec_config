	depends on CODEC_ALC5621
config CODEC_ALC5621_I2C
	int "alc5621 i2c channel(0 or 1)"
	depends on CODEC_ALC5621
	default 0
config CODEC_ALC5621_SPKVOL
#	int "alc5621 speaker volume"
	int 
	depends on CODEC_ALC5621
	default 10
config CODEC_ALC5621_RECVOL
#	int "alc5621 record volume"
	int 
	depends on CODEC_ALC5621
	default 10


endif

